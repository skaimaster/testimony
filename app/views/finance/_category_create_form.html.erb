
<label class="head_label"><%= t('create_new_category') %><span></span></label>

<% form_remote_for :finance_category,
  :url => {:action => 'category_create'} do |f| %>

  <div id="form-errors"></div>
  <div class="label-field-pair">
    <div class="label-container"><label><%= t('category_name') %>:</label> </div>
    <div class="input-container"><%= f.text_field :name %></div>
  </div>
  <div class="label-field-pair">
    <div class="label-container"><label><%= t('description') %>:</label> </div>
    <div class="input-container"><%= f.text_field :description %></div>
  </div>
  <div class="label-field-pair">
    <div class="label-container"><label><%= t('is_this_under_income') %></label> </div>
    <div class="input-container"><%= f.check_box :is_income %> </div>
  </div>

  <div id="modelbox-submit">
    <%=  submit_tag "â–º #{t('create_text')}",:class=>'submit_button' %>
  </div>
<% end %>
