
<label class="head_label"><%= t('edit_master_category_for_fee') %><span></span></label>

<div id="grading-levels-form">

  <% form_remote_for @finance_fee_category,
    :url=>{:action=>'additional_fees_update',
    :id => @finance_fee_category.id} do |f| %>
    <div id="form-errors"></div>
    <div class="label-field-pair">
      <div class="label-container"><label><%= t('name') %>:</label> </div>
      <div class="input-container"> <%= f.text_field :name %> </div>
    </div>
    <div class="label-field-pair">
      <div class="label-container"><label><%= t('description') %>:</label></div>
      <div class="input-container"><%= f.text_field :description %></div>
    </div>
    <div class="label-field-pair">
      <div class="label-container"><label><%= t('start_date') %> :</label> </div>
      <div class="input-container"><%= calendar_date_select_tag 'additional_fees[start_date]', I18n.l(@collection_date.start_date,:format=>:default),:readonly=>true,:popup=>"force" %></div>
    </div>
    <div class="label-field-pair">
      <div class="label-container"><label><%= t('end_date') %> <span class="necessary-field">*</span>:</label> </div>
      <div class="input-container"><%= calendar_date_select_tag 'additional_fees[end_date]', I18n.l(@collection_date.end_date,:format=>:default),:readonly=>true,:popup=>"force" %></div>
    </div>
    <div class="label-field-pair">
      <div class="label-container"><label><%= t('due_date') %> :</label> </div>
      <div class="input-container"><%= calendar_date_select_tag 'additional_fees[due_date]', I18n.l(@collection_date.due_date,:format=>:default),:readonly=>true,:popup=>"force" %></div>
    </div>
    <div class="label-field-pair">
      <div class="label-container"><label><%= t('course_text') %> :</label></div>
      <div class="input-container"> <% unless @finance_fee_category.batch_id.nil? %>
          <%= f.text_field :batch, :value => @finance_fee_category.batch.full_name, :disabled => true  %>
        <% else %>
          <label><%= t('all') %></label>
        <% end %>
      </div>
    </div>

    <%=  submit_tag "â–º #{t('update')}",:class=>'submit_button' %>
  <% end %>
</div>
